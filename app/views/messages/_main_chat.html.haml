.main-box
  .main-header
    .main-header__group
      .main-header__group__group-name
        = @group.name
      .main-header__group__group-list
        Member:
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group.id), class: "main-header__edit__btn" do
      Edit

  .message-field
    = render @messages
    
  .footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form-contents
        = f.text_field :content, class: 'login-input-text', placeholder: 'type a message'
        = f.label :image, class: 'form-contents__image' do
          = icon('far', 'image', class: 'input-box__image2')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'send-btn'